<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E0D5D5"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rentableCarImage"
                android:layout_width="240dp"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:background="@color/white" />

            <TextView
                android:id="@+id/rentablePricePerDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#004DB4"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:gravity="center"
                android:text="Price Per Day" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFFF00" />

            <TextView
                android:id="@+id/rentableCarOwner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#004DB4"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:gravity="center"
                android:text="Owner" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFFF00" />

            <TextView
                android:id="@+id/rentablePhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#004DB4"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:gravity="center"
                android:text="Phone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>